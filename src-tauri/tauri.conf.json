{
  "$schema": "../node_modules/@tauri-apps/cli/config.schema.json",
  "productName": "PractoCore",
  "version": "0.1.0",
  "identifier": "com.tauri.dev",
  "build": {
    "frontendDist": "../dist",
    "devUrl": "http://localhost:3000",
    "beforeDevCommand": "bun run dev --host",
    "beforeBuildCommand": "bun run generate"
  },
  "app": {
    "windows": [
      {
        "title": "PractoCore: Litigation Deadline Management System",
        "width": 1200,
        "height": 600,
        "minWidth": 800,
        "minHeight": 600,
        "resizable": true,
        "fullscreen": false
      }
    ],
    "security": {
      "csp": null
    }
  },
  "bundle": {
    "active": true,
    "targets": "all",
    "icon": [
      "icons/32x32.png",
      "icons/128x128.png",
      "icons/128x128@2x.png",
      "icons/icon.icns",
      "icons/icon.ico"
    ]
  },
  "plugins": {
    "remote-push": {
      "senderId": "488964126042"
    }
  }
}
